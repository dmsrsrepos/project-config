{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": [
      "ES2022"
    ],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "paths": { // 指定模块的路径，和baseUrl有关联，和webpack中resolve.alias配置一样
      "@/*": [
        "extension/src/*"
      ],
      "@assets/*": [
        "extension/src/assets/*",
        "extension/res/*"
      ],
      "@components/*": [
        "extension/src/components/*"
      ],
      "@store/*": [
        "extension/src/stores/*"
      ],
      "@utils/*": [
        "extension/src/utils/*"
      ],
      "@sys/*": [
        "extension/src/sys/*"
      ]
    },
  },
  "include": [
    "extension/**/*.ts"
  ]
}