{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request":"launch",
      "name": "Launch Extension",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension"
      ],
      "outFiles": [
        "${workspaceFolder}/extension/*.js"
      ],
      "preLaunchTask": "npm: ext:dev",
    }
  ]
}